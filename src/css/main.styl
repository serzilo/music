// variables
$header-height = 119px;
$border-color = #e5e5e5;
$active-color = #568af2;

// mixins
fontSize(size, context){
	font-size: (size / context) * 100 + '%'
}

* {
	box-sizing: border-box;
}

body {
	color: #000;
	font: 100% Arial,Helvetica,sans-serif;
	margin: 0;
	padding: 0;
	position: relative;
	background: #F6F5F5;
}

body, html, .layout{
	height: 100%;
	min-height: 100%;
}

.layout{
	margin: 0 auto;
	max-width: 900px;
	position: relative;
	background: #fff;

	&__header{
		position: fixed;
		top: 0;
		right: 0;
		left: 0;
		z-index: 1000;
	}
}

.app{
	&__header{
		margin: 0 auto;
		max-width: 900px;
		position: relative;
		background: #fff;
		background: rgba(255,255,255, 0.9);
		border-bottom: 1px solid $border-color;
		padding: 15px;
	}

	&__results{
		padding-top: $header-height + 1
		background: #fff;
	}

	&__total{
		padding: 5px 15px;
		background: #fff;
		fontSize(15, 16)
		border-bottom: 1px solid $border-color;
	}
}

.search{
	position: relative;

	&__input{
		display: block;
		width: 100%;
		margin: 0;
		outline: 0;
		border: 1px solid #c2c2c2;
		fontSize(15, 16)
		padding: 7px 8px;

		&:focus{
			border-color: $active-color;
		}
	}

	&__btn{
		display: block;
		position: absolute;
		right: 2px;
		top: 2px;
		bottom: 2px;
		border: none;
		background: $active-color;
		fontSize(13, 16)
		color: #fff;
		padding: 6px 9px 7px 9px;

		&:hover,
		&:focus{
			outline: none;
			background: #4c79d4;
		}

		&:active{
			padding: 7px 9px 6px 9px;
		}

		&:before{
			display: block;
			content: '';
			position: absolute;
			top: -1px;
			bottom: -1px;
			right: 100%;
			width: 8px;
			background: #fff;
		}
	}

	&__spinner{
		display: block;
		position: absolute;
		top: 1px;
		bottom: 1px;
		background: #fff url('../img/spinner.gif') no-repeat center center;
		height: 31px;
		width: 30px;
		background-size: cover;
	}
}


.tile{
	display: inline-block;
	width: 24%;
	vertical-align: top;
	padding: 10px;
	text-align: left;
	margin: 10px 0;

	@media all and (max-width: 700px) {
		&{
			width:32%;
		}	
	}

	@media all and (max-width: 450px) {
		&{
			width:49%;
		}	
	}

	&__image{
		padding-bottom: 100%;
		height: 0;
		position: relative;
		background-color: #d2dffa;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;

		&:after{
			content: '';
			display: block;
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;
			border: 1px solid rgba(0, 0, 0, 0.2);
		}
	}

	&__artist{
		font-weight:bold;
		fontSize(17, 16)
		padding-top: 5px;
	}

	&-wrapper{
		text-align: center;
	}
}

.track-list{
	margin: 0;
	padding: 0;
	list-style: none;

	&__item{
		fontSize(15, 16)
		padding: 6px 6px 6px 20px;
		cursor: pointer;

		&:hover{
			background: $active-color;
			color: #fff;
		}

		&:active{
			padding: 7px 6px 5px 20px;
		}
	}
}


.table{
    width: 100%;
    border-spacing: 0px;
    border-collapse: collapse;
    table-layout: fixed;

    &__cell {
	    vertical-align: top;
	    border: 0;
	    padding: 0;
	    text-align: center;
	}
}

.toggle{
	cursor: pointer;
    display: block;
    position: relative;
    padding: 11px 0;
    background: #fff;
    margin: 0;
    border: 1px solid #cdd4e1;
    border-right-width: 0;

    color: #7a90a0;
    fontSize(14, 16)
    font-weight: normal;
    white-space: nowrap;

    -webkit-tap-highlight-color: rgba(0,0,0,0);
    user-select: none;
    border-radius: 0px;

	&_active{
		color: #323232;
	    background: #b8cde3;
	    box-shadow: inset 0px 3px 5px #6485a7;
	    cursor: default;
	}

	&_first{
		border-top-left-radius: 3px;
    	border-bottom-left-radius: 3px;
	}

	&_last{
		border-top-right-radius: 3px;
    	border-bottom-right-radius: 3px;
    	border-right-width: 1px;
	}
}

.block{
	margin-top: 15px;

	&_toggle{
		max-width: 550px;
	}
}

.button{
	text-align: center;
	color: #57a3ea;
    font-weight: bold;
    fontSize(13, 16);
    cursor: pointer;

    padding: 14px;
	background: #fff;
	margin: 15px;

	border: 1px solid #c5d3e1;
	border-radius: 2px;
	box-shadow: 0px 3px 5px rgba(93,109,157,0.3);

	user-select: none;

	&:hover{
		background: #ecf5fd;
	}

	&:active{
		padding: 15px 14px 13px 14px;
    	color: #323232;
    	background: #b8cde3;
    	box-shadow: inset 0px 3px 5px #6485a7;
	}

}

.hide{
	display: none;
}

.clear:after{
	content: '';
	display: block;
	clear: both;
}



