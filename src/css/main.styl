// variables
$header-height = 119px;
$footer-height = 164px;

$border-color = #e5e5e5;
$active-color = #568af2;
$btn-hover-color = #ecf5fd;

// mixins
fontSize(size, context){
	font-size: (size / context) * 100 + '%'
}

* {
	box-sizing: border-box;
}

body {
	color: #000;
	font: 100% Arial,Helvetica,sans-serif;
	margin: 0;
	padding: 0;
	position: relative;
	background: #F6F5F5;
}

body, html, .layout{
	height: 100%;
	min-height: 100%;
}

.layout{
	margin: 0 auto;
	max-width: 900px;
	position: relative;
	background: #fff;

	&__header{
		position: fixed;
		top: 0;
		right: 0;
		left: 0;
		z-index: 1000;
	}

	&__footer{
		position: fixed;
		bottom: 0;
		right: 0;
		left: 0;
		z-index: 1000;
	}
}

.app{
	&__header,
	&__footer{
		margin: 0 auto;
		max-width: 900px;
		position: relative;
		background: #fff;
		background: rgba(255,255,255, 0.9);
		border-bottom: 1px solid $border-color;
		padding: 15px;
	}

	&__footer{
		border-top: none;
		border-top: 1px solid $border-color;
	}

	&__results{
		padding-top: $header-height + 1
		padding-bottom: $footer-height + 1
		background: #fff;
	}

	&__total{
		padding: 5px 15px;
		background: #fff;
		fontSize(15, 16)
		border-bottom: 1px solid $border-color;
	}
}

.search{
	position: relative;

	&__input{
		display: block;
		width: 100%;
		margin: 0;
		outline: 0;
		border: 1px solid #c2c2c2;
		fontSize(15, 16)
		padding: 7px 8px;

		&:focus{
			border-color: $active-color;
		}
	}

	&__btn{
		display: block;
		position: absolute;
		right: 2px;
		top: 2px;
		bottom: 2px;
		border: none;
		background: $active-color;
		fontSize(13, 16)
		color: #fff;
		padding: 6px 9px 7px 9px;

		&:hover,
		&:focus{
			outline: none;
			background: #4c79d4;
		}

		&:active{
			padding: 7px 9px 6px 9px;
		}

		&:before{
			display: block;
			content: '';
			position: absolute;
			top: -1px;
			bottom: -1px;
			right: 100%;
			width: 8px;
			background: #fff;
		}
	}

	&__spinner{
		display: block;
		position: absolute;
		top: 1px;
		bottom: 1px;
		background: #fff url('../img/spinner.gif') no-repeat center center;
		height: 31px;
		width: 30px;
		background-size: cover;
	}
}


.tile{
	display: inline-block;
	width: 24%;
	vertical-align: top;
	padding: 10px;
	text-align: left;
	margin: 10px 0;

	@media all and (max-width: 700px) {
		&{
			width:32%;
		}	
	}

	@media all and (max-width: 450px) {
		&{
			width:49%;
		}	
	}

	&__image{
		padding-bottom: 100%;
		height: 0;
		position: relative;
		background-color: #d2dffa;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;

		&:after{
			content: '';
			display: block;
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;
			border: 1px solid rgba(0, 0, 0, 0.2);
		}
	}

	&__artist{
		font-weight:bold;
		fontSize(17, 16)
		padding-top: 5px;
	}

	&-wrapper{
		text-align: center;
	}
}

.track-list{
	margin: 0;
	padding: 0;
	list-style: none;

	&__item{
		fontSize(15, 16)
		padding: 6px 6px 6px 20px;
		cursor: pointer;

		&:hover{
			background: $active-color;
			color: #fff;
		}

		&:active{
			padding: 7px 6px 5px 20px;
		}
	}
}


.table{
    width: 100%;
    border-spacing: 0px;
    border-collapse: collapse;
    table-layout: fixed;

    &__cell {
	    vertical-align: top;
	    border: 0;
	    padding: 0;
	    text-align: center;
	}
}

.toggle{
	cursor: pointer;
    display: block;
    position: relative;
    padding: 11px 0;
    background: #fff;
    margin: 0;
    border: 1px solid #cdd4e1;
    border-right-width: 0;

    color: #7a90a0;
    fontSize(14, 16)
    font-weight: normal;
    white-space: nowrap;

    -webkit-tap-highlight-color: rgba(0,0,0,0);
    user-select: none;
    border-radius: 0px;

    &:hover{
    	background: $btn-hover-color;
    }

	&_active,
	&_active:hover{
		color: #323232;
	    background: #b8cde3;
	    box-shadow: inset 0px 3px 5px #6485a7;
	    cursor: default;
	}

	&_first{
		border-top-left-radius: 3px;
    	border-bottom-left-radius: 3px;
	}

	&_last{
		border-top-right-radius: 3px;
    	border-bottom-right-radius: 3px;
    	border-right-width: 1px;
	}
}

.block{
	margin-top: 15px;

	&_toggle{
		max-width: 550px;
	}
}

.button{
	text-align: center;
	color: #57a3ea;
    font-weight: bold;
    fontSize(13, 16);
    cursor: pointer;

    padding: 14px;
	background: #fff;
	margin: 15px;

	border: 1px solid #c5d3e1;
	border-radius: 2px;
	box-shadow: 0px 3px 5px rgba(93,109,157,0.3);

	user-select: none;

	&:hover{
		background: #ecf5fd;
	}

	&:active{
		padding: 15px 14px 13px 14px;
    	color: #323232;
    	background: #b8cde3;
    	box-shadow: inset 0px 3px 5px #6485a7;
	}

}

.hide{
	display: none;
}

.clear:after{
	content: '';
	display: block;
	clear: both;
}

.player{
	&__btn-wrapper{
		text-align: center;
	}

	&__btn{
	    display: inline-block;
	    cursor: pointer;
	    padding: 20px;
	    height: 62px;
	    width: 62px;
	    border: 1px solid $border-color;
	    text-decoration: none;
	    vertical-align: middle;
	    background: #fff;
	    margin: 0 15px;

	    border-radius: 50%;
	    -webkit-tap-highlight-color: rgba(0,0,0,0);
   		user-select: none;

   		@media all and (max-width: 340px) {
			&{
				margin: 0 8px;
			}	
		}

   		&:hover{
   			background: $btn-hover-color;
   		}
	}

	&__tools{
		position: relative;
		overflow: hidden;
		padding: 12px 0;
	}

	&__time{
		float: left;
		color: #7a90a0;
		fontSize(15, 16)

		&-full{
			float: right;
		}
	}

	&__progress{
		position: absolute;
		z-index: 100;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		border-top: 1px solid #cdd4e1;

		&-bg{
			position: absolute;
			top: -1px;
			left: 0;
			width: 0;
			height: 3px;
			background: $active-color;
			transition: width 0.4s ease-in;

			&:after{
				position: absolute;
				top: 0;
				right: 0;
				height: 12px;
				border-left: 1px solid red;
				content: '';
				display: block;
			}
		}
	}

	&__track-name{
		overflow: hidden;
		white-space: nowrap;
		text-overflow: ellipsis;
		fontSize(15, 16)
		padding-bottom: 12px;
	}
}

.icon{
	display: block;
	height: 20px;
	width: 20px;
}

.animation{
	position: absolute;
    top: 0; left: 0; bottom: 0; right: 0;
	background-color: rgba(86,138,242, 0.3);

    &:after{
    	content: "";
        position: absolute;
        top: 0; left: 0; bottom: 0; right: 0;
        background-image: -webkit-gradient(linear, 0 0, 100% 100%,
            color-stop(.25, rgba(255, 255, 255, .2)),
            color-stop(.25, transparent), color-stop(.5, transparent),
            color-stop(.5, rgba(255, 255, 255, .2)),
            color-stop(.75, rgba(255, 255, 255, .2)),
            color-stop(.75, transparent), to(transparent)
        );

        background-size: 50px 50px;
        -webkit-animation: move 2s linear infinite;
    }
}

@-webkit-keyframes move {
    0% {
       background-position: 0 0;
    }
    100% {
       background-position: 50px 50px;
    }
}


